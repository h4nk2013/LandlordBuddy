<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@drawable/list_selector">

		<TextView
		    android:id="@+id/rowYear"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/table_year"
		    android:layout_weight="1" />
 
		<TextView
		    android:id="@+id/rowMonth"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/table_month"
		    android:layout_weight="1" />

		<TextView
		    android:id="@+id/rowPaid"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/table_paid"
		    android:layout_weight="1" />

		<TextView
		    android:id="@+id/rowRent"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/table_Rent"
		    android:layout_weight="1" />
		<TextView
		    android:id="@+id/rowDue"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/table_due"
		    android:layout_weight="1" />

</LinearLayout>
